<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_captured"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="72dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Name"
            android:textSize="36sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_captured" />

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Job/title"
            android:textSize="18dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_logo_upn"
            card_view:layout_constraintStart_toEndOf="@+id/iv_logo_upn"
            card_view:layout_constraintTop_toTopOf="@+id/iv_logo_upn" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Done"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/bg_complete" />

        <ImageView
            android:id="@+id/bg_complete"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_job"
            card_view:srcCompat="@drawable/bg_complete" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Complete"
            android:textSize="14sp"
            android:textColor="@color/grey"
            card_view:layout_constraintBottom_toBottomOf="@+id/bg_complete"
            card_view:layout_constraintEnd_toStartOf="@+id/iv_complete"
            card_view:layout_constraintHorizontal_chainStyle="packed"
            card_view:layout_constraintStart_toStartOf="@+id/bg_complete"
            card_view:layout_constraintTop_toTopOf="@+id/bg_complete" />

        <ImageView
            android:id="@+id/iv_complete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_complete"
            card_view:layout_constraintEnd_toEndOf="@+id/bg_complete"
            card_view:layout_constraintStart_toEndOf="@+id/tv_complete"
            card_view:layout_constraintTop_toTopOf="@+id/tv_complete"
            card_view:srcCompat="@drawable/ic_check" />

        <ImageView
            android:id="@+id/iv_logo_upn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            card_view:layout_constraintStart_toStartOf="@+id/tv_name"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:src="@drawable/ic_upn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>